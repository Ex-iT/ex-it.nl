---
import { Icon } from 'astro-icon/components'
import { socialLinks } from '../../config'

interface Props {
  isSmall?: boolean
}

const { isSmall } = Astro.props
---

<ul class:list={[`${isSmall ? 'gap-4' : 'flex-col gap-1'}`, 'flex']}>
  {
    socialLinks.map((link) => (
      <li>
        <a
          class="group/social inline-flex self-center gap-2 hover:text-secondary transition-all"
          href={link.url}
          target="_blank"
          title={link.label}
        >
          <Icon
            class="w-6 h-6 group-hover/social:opacity-50 transition-all"
            name={link.icon}
          />
          {!isSmall && link.label}
        </a>
      </li>
    ))
  }
</ul>
