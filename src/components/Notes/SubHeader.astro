---
import type { CollectionEntry } from 'astro:content'
import formatDate from '../../utils/formatDate'
import Badge from '../App/Badge.astro'

interface Props {
  data: CollectionEntry<'notes'>['data']
}

const { data } = Astro.props
---

<div class="flex items-center gap-2 mb-2">
  {
    data.pubDate && (
      <time
        class="shrink-0 basis-auto text-sm"
        datetime={data.pubDate.toISOString()}
      >
        {formatDate(data.pubDate)}
      </time>
    )
  }
  {
    data.category && (
      <Badge variant="subtle">
        <a
          class="underline hover:no-underline hover:opacity-80 hover:hover:text-primary transition-all"
          href={`/notes/${data.category}`}
        >
          {data.category}
        </a>
      </Badge>
    )
  }
</div>
