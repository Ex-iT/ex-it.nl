---
import { Image } from 'astro:assets'

interface Props {
  imgSrc: string | undefined
  alt: string
  class?: string
}

const { imgSrc, alt, class: className } = Astro.props
---

<Image
  src={imgSrc ? imgSrc : '/images/exit-to-app-sharp-80.png'}
  alt={alt}
  width={80}
  height={80}
  class:list={['rounded-full', className]}
/>
