---
import BaseLayout from './BaseLayout.astro'
import getTitle from '../utils/getTitle'
import Avatar from '../components/Avatar/Avatar.astro'
import SocialLinks from '../components/App/SocialLinks.astro'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { title, description, image } = Astro.props
---

<BaseLayout
  title={getTitle(title ?? '')}
  description={description ?? ''}
  image={image}
>
  <main class="mt-20 mb-4">
    <div class="container-global flex items-start">
      <aside class="shrink-0 max-md:hidden mr-4">
        <slot name="aside">
          <div class="base-card flex flex-col">
            <Avatar />
            <SocialLinks />
          </div>
        </slot>
      </aside>
      <slot />
    </div>
  </main>
</BaseLayout>
