---
import BaseLayout from './BaseLayout.astro'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { title, description, image } = Astro.props
---

<BaseLayout title={title} description={description} image={image}>
  <main class="mt-20 mb-4">
    <div class="container-global">
      <slot />
    </div>
  </main>
</BaseLayout>
